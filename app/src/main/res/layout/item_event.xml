<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivBackdropEvent"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:srcCompat="@drawable/Poster2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLive"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="LIVE"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:icon="@drawable/green_dot"
        app:iconTint="#009900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#009900"
        app:strokeColor="@android:color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDate"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="10/22 @12PM"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:backgroundTint="@android:color/transparent"
        app:iconPadding="0dp"
        app:iconTint="#009900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#009900"
        app:strokeColor="@android:color/black"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Daniel"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="\@daniel"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScreenName" />

    <TextView
        android:id="@+id/tvTypeOfContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Movie"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvTitleEvent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitleEvent"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Pride + Prejudice + zombies"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackdropEvent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNumInterested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="88 attending"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivFourthPlatformEvent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvNumInterested"
        app:layout_constraintEnd_toStartOf="@+id/ivThirdPlatformEvent"
        app:srcCompat="@null"
        tools:srcCompat="@null" />

    <ImageView
        android:id="@+id/ivSecondPlatformEvent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvNumInterested"
        app:layout_constraintEnd_toStartOf="@+id/ivFirstPlatformEvent"
        app:srcCompat="@null"
        tools:srcCompat="@null" />

    <ImageView
        android:id="@+id/ivThirdPlatformEvent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvNumInterested"
        app:layout_constraintEnd_toStartOf="@+id/ivSecondPlatformEvent"
        app:srcCompat="@null"
        tools:srcCompat="@null" />

    <ImageView
        android:id="@+id/ivFirstPlatformEvent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvNumInterested"
        app:layout_constraintEnd_toStartOf="@+id/tvNumPlatformsLeft"
        app:srcCompat="@null"
        tools:srcCompat="@null" />

    <TextView
        android:id="@+id/tvNumPlatformsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="17dp"
        android:text="+ 3"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvNumInterested"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvOtherDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="4 other dates"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDate" />

    <TextView
        android:id="@+id/tvAvailableOnEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="39dp"
        android:text="Available on:"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvNumInterested"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:text="New Date!"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnDate"
        app:layout_constraintTop_toTopOf="@+id/ivBackdropEvent" />

    <TextView
        android:id="@+id/tvRemovedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:text="Removed Date!"
        android:textColor="#d62929"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btnDate"
        app:layout_constraintTop_toTopOf="@+id/ivBackdropEvent" />

</androidx.constraintlayout.widget.ConstraintLayout>